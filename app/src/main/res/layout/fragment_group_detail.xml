<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/groupCoverImgView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/campaign_placeholder_img"
                    tools:src="@tools:sample/backgrounds/scenic" />

                <View
                    android:id="@+id/headerBackground"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/color_header"
                    app:layout_constraintBottom_toBottomOf="@id/txtGroupBio"
                    app:layout_constraintTop_toBottomOf="@id/groupCoverImgView" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/logoImgView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="116dp"
                    android:src="@drawable/group_logo_placeholder_img"
                    app:civ_border_color="@color/divider"
                    app:civ_border_width="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/txtGroupName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:paddingTop="8dp"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textAlignment="viewStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/logoImgView"
                    tools:text="@tools:sample/full_names" />

                <com.teaml.iq.volunteer.utils.custom.view.TextViewWithArabicDigits
                    android:id="@+id/txtCampaignsNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtGroupName"
                    tools:text="8 campaign " />

                <TextView
                    android:id="@+id/txtGroupBio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="16dp"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/secondary_text_light"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtCampaignsNum"
                    tools:text="@tools:sample/lorem" />

                <TextView
                    android:id="@+id/txtCampaigns"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="@string/campaigns"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/headerBackground" />

            </android.support.constraint.ConstraintLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                tools:listitem="@layout/group_campaigns_view" />

            <ImageView
                android:id="@+id/emptyImgView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:contentDescription="@null"
                android:src="@drawable/group_logo_placeholder_img"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtEmptyResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="@string/no_item_found"
                android:textSize="16sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnViewAll"
                style="@style/ButtonBorderlessColoredStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:text="@string/view_all"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent" />
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:fabSize="auto"
        app:srcCompat="@drawable/ic_add_24dp" />

    <View
        android:id="@+id/hideDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <include
        layout="@layout/progressbar_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/retryImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_background"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="true"
        android:padding="4dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_refresh_black_24dp" />

</FrameLayout>