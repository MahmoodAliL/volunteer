<resources>

    <!-- Custom SpotsDialog Attribute -->
    <style name="SpotsDialogCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="DialogTitleAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="DialogTitleText">Loading...</item>
        <item name="DialogSpotColor">@color/colorAccent</item>
        <item name="DialogSpotCount">4</item>
    </style>


    <!-- Sign In Button Style -->
    <style name="ButtonColoredStyle" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <!-- Sign In Button Style -->
    <style name="ButtonBorderlessColoredStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- ActionBar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Toolbar -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonWithDrawableStyle">
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>
