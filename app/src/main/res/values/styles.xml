<resources>

    <!-- Custom SpotsDialog Attribute -->
    <style name="SpotsDialogCustom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="DialogTitleText">Loading...</item>
        <item name="DialogSpotColor">@color/colorAccent</item>
        <item name="DialogSpotCount">4</item>
    </style>


    <!-- Sign In Button Style -->
    <style name="ButtonColoredStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Sign In Button Style -->
    <style name="ButtonBorderlessColoredStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- ActionBar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Toolbar -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
