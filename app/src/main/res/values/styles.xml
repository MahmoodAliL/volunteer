<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom SpotsDialog Attribute -->
    <style name="SpotsDialogCustom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="DialogTextTitle">Loading...</item>
        <item name="DialogSpotColor">@color/colorAccent</item>
        <item name="DialogSpotCount">4</item>
    </style>

</resources>
